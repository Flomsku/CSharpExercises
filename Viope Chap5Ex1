using System;

namespace ConsoleApp1
{
    class Program
    {
        class Kirja  //Luokka
        {
            public string KirjanNimi;
            public string KirjoittajanNimi;
            public string id;
            public string KappaleHinta;

            //Muodostin
            public Kirja(string KirjanNimi, string KirjoittajanNimi, string id, string KappaleHinta)

            {
                this.KirjanNimi = KirjanNimi;
                this.KirjoittajanNimi = KirjoittajanNimi;
                this.id = id;
                this.KappaleHinta = KappaleHinta;
            }

            //pääohjelma

            static void Main()
            {
                Kirja k = new Kirja("Kirja", "K.Kirjoittaja", "528" , "21.5");
                Console.WriteLine(k.KirjanNimi +", " +k.KirjoittajanNimi + ", " + k.id + ", " + k.KappaleHinta);
            }

        }
    }
}
